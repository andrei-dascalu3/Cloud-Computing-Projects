<div class="row gx-5">
    <div class="col-md-6 mb-4">
        <div class="bg-image hover-overlay ripple shadow-2-strong rounded-5" data-mdb-ripple-color="light">
            <img src="<%= entity.image %>" class="img-fluid" />
            <a href="#!">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
            </a>
        </div>
    </div>

    <div class="col-md-6 mb-4 post-text-container">
        <p class="text-info post-text-content">
            <%= entity.content %>
        </p>
        <div class="post-buttons">
            <button type="button" class="btn btn-primary btn-sm" type="button">LISTEN</button>
            <button type="button" class="btn btn-info btn-sm" type="button">TRANSLATE</button>
        </div>
    </div>
</div>