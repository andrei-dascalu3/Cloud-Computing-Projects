<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <title>Cloud Computing - Homework 3</title>
</head>

<body>
    <%- include('./includes/navigation.ejs') %>
        <div class="container py-5">
            <div class="row py-4">
                <div class="col-lg-6 mx-auto">

                    <header class="text-white text-center">
                        <p class="lead mb-0">Upload image</p>
                    </header>
                    <!-- Upload image input-->
                    <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm">
                        <input id="upload" type="file" onchange="readURL(this);" class="form-control border-0">
                        <label id="upload-label" for="upload" class="font-weight-light text-muted">Choose file</label>
                        <div class="input-group-append">
                            <label for="upload" class="btn btn-light m-0 rounded-pill px-4"> <i
                                    class="fa fa-cloud-upload mr-2 text-muted"></i><small
                                    class="text-uppercase font-weight-bold text-muted">Choose file</small></label>
                        </div>
                    </div>

                    <!-- Uploaded image area-->
                    <p class="font-italic text-white text-center">Preview</p>
                    <div class="image-area mt-4"><img id="imageResult" src="#" alt=""
                            class="img-fluid rounded shadow-sm mx-auto d-block"></div>
                </div>

                <div class="col-lg-6 mx-auto">
                    <!-- Post writing -->
                    <header class="text-white text-center">
                        <p class="lead mb-0">What's on your mind?</p>
                    </header>

                    <div class="input-group">
                        <textarea name="post-area" id="post-area" placeholder="Write something..." cols="30"
                            rows="1"></textarea>
                    </div>

                    <div class="post-buttons">
                        <button type="button" class="btn btn-primary btn-lg" type="button">POST</button>
                        <button type="button" class="btn btn-secondary btn-lg" type="button">SPEAK <i class="fa fa-microphone"></i></button>
                    </div>
                </div>
            </div>
        </div>

</body>

</html>